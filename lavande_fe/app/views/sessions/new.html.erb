<h2>Log in</h2>

<%= form_with url: sessions_path do |f| %>
  <div class="w-50">
    <div class="mt-2">
      <label for="email">Email</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-1", value: params[:email]  %>
    </div>

    <div class="mt-2">
      <label for="email">Password</label>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control mt-1" %>
    </div>
  </div>

  <div class="field form-group mt-2">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>

  <div class="actions mt-2">
    <%= f.submit "Log in", class: "btn btn-secondary" %>
  </div>
<% end %>

<br><br><br><br>
<%= render "shared/ad" %>
