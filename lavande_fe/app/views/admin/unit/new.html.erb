<h2>Buat Unit</h2>

<%= form_with url: admin_unit_index_path, class: "w-50" do |f| %>
  <div class="field form-group">
    <%= f.label :gov_id, "Gov ID", class: "form-label" %>
    <%= f.text_field :gov_id, autofocus: true, class: "form-control", autocomplete: "email", value: params[:gov_id] %>
  </div>

  <div class="field form-group mb-2">
    <%= f.label :tower, class: "form-label" %>
    <%= f.select :tower, ["A", "B", "C"], { prompt: "Tower", selected: params[:tower] }, class: "form-select mt-1" %>
  </div>
  
  <div class="field form-group">
    <%= f.label :floor, class: "form-label" %>
    <%= f.select :floor, [*1..35], { prompt: "Floor", selected: params[:floor] }, class: "form-select mt-1" %>
  </div>

  <div class="field form-group">
    <%= f.label :unit_no, "Unit Number", class: "form-label" %>
    <%= f.text_field :unit_no, autofocus: true, class: "form-control", autocomplete: "unit_no", value: params[:unit_no] %>
  </div>

  <br>
  <div class="actions">
    <%= f.submit "Create", class: "btn btn-secondary" %>
  </div>
<% end %>
