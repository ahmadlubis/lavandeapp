<h2>Edit Unit</h2>

<%= form_with model: @unit, url: admin_unit_path(@unit.id), method: :patch, class: "w-50" do |f| %>
  <%= f.hidden_field( :id) %>
  <div class="field form-group">
    <%= f.label :gov_id, "Gov ID", class: "form-label" %>
    <%= f.text_field :gov_id, autofocus: true, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :tower, class: "form-label" %>
    <%= f.select :tower, ["A", "B", "C"], { prompt: "Tower", selected: params[:tower] }, class: "form-select mt-1" %>
  </div>

  <div class="field form-group">
    <%= f.label :floor, class: "form-label" %>
    <%= f.select :floor, ["1", "2", "3"], { prompt: "Floor", selected: params[:floor] }, class: "form-select mt-1" %>
  </div>

  <div class="field form-group">
    <%= f.label :unit_no, "Unit Number", class: "form-label" %>
    <%= f.text_field :unit_no, autofocus: true, class: "form-control" %>
  </div>

  <br>
  <div class="actions">
    <%= f.submit "Edit", class: "btn btn-secondary" %>
  </div>
<% end %>
