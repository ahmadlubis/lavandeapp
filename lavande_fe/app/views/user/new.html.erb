<h2>Sign up</h2>

<%= form_with url: user_index_path do |f| %>
  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", value: params[:email] %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
  </div>

  <br>

  <div class="field form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control", autocomplete: "name", value: params[:name] %>
  </div>

  <div class="field form-group">
    <%= f.label :nik, "NIK" %><br />
    <%= f.text_field :nik, autofocus: true, class: "form-control", autocomplete: "NIK", value: params[:nik] %>
  </div>

  <div class="field form-group">
    <%= f.label :phone_no %><br />
    <%= f.text_field :phone_no, autofocus: true, class: "form-control", autocomplete: "phone_no", value: params[:phone_no] %>
  </div>

  <div class="field form-group">
    <%= f.label :religion, "Agama" %>
    <%= f.select :religion, ["islam", "protestant", "catholic", "hindu", "buddha", "confucius", "others"], {}, class: "form-select", id: "inputGroupSelect01", value: params[:religion] %>
  </div>

  <br>
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-secondary" %>
  </div>
<% end %>

