<div class="jumbotron">
  <h2>Sign Up</h2>
  <%= form_with url: user_index_path do |f| %>
    <div class="card mb-4 w-100" style="max-width: 700px">
      <div class="card-body">
        <div class="row">
          <div class="d-flex align-items-center col-sm-3">
            <%= f.label :email, class: "form-label mb-0 mb-0" %>
          </div>
          <div class="col-sm-9">
            <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", value: params[:email] %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="d-flex align-items-center col-sm-3">
            <%= f.label :password, "New password", class: "form-label mb-0" %>
          </div>
          <div class="col-sm-9">
            <%= f.password_field :password, class: "form-control", autocomplete: "password" %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="d-flex align-items-center col-sm-3">
            <%= f.label :password_confirmation, "Confirm password", class: "form-label mb-0" %>
          </div>
          <div class="col-sm-9">
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="d-flex align-items-center col-sm-3">
            <%= f.label :name, class: "form-label mb-0" %>
          </div>
          <div class="col-sm-9">
            <%= f.text_field :name, autofocus: true, class: "form-control", autocomplete: "name", value: params[:name] %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="d-flex align-items-center col-sm-3">
            <%= f.label :nik, "NIK", class: "form-label mb-0" %>
          </div>
          <div class="col-sm-9">
            <%= f.text_field :nik, autofocus: true, class: "form-control", autocomplete: "NIK", value: params[:nik] %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="d-flex align-items-center col-sm-3">
            <%= f.label :phone_no, class: "form-label mb-0" %>
          </div>
          <div class="col-sm-9">
            <%= f.text_field :phone_no, autofocus: true, class: "form-control", autocomplete: "phone_no", value: params[:phone_no] %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="d-flex align-items-center col-sm-3">
            <%= f.label :religion, "Agama", class: "form-label mb-0" %>
          </div>
          <div class="col-sm-9">
            <%= f.select :religion, [["Islam", "islam"], ["Protestan", "protestant"], ["Katolik", "catholic"], ["Hindu", "hindu"], ["Buddha", "buddha"], ["Confucius", "confucius"], ["Lainnya", "others"]], {}, class: "form-select" %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="ml-5">
            <%= f.submit "Sign Up", class: "btn btn-secondary w-25", style: "min-width: 50px" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>


